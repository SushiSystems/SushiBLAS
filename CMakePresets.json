{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Intel oneAPI + vcpkg",
            "description": "Intel oneAPI DPC++ with vcpkg classic mode",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "INTEL_ONEAPI_DIR": "$env{ONEAPI_ROOT}/compiler/latest",
                "CMAKE_CXX_COMPILER": "icx-cl",
                "CMAKE_C_COMPILER": "icx-cl",
                "CMAKE_CXX_FLAGS": "-fsycl"
            },
            "environment": {
                "CMPLR_ROOT": "$env{ONEAPI_ROOT}/compiler/latest",
                "PATH": "$env{ONEAPI_ROOT}/compiler/latest/bin;$env{VCPKG_ROOT}/installed/x64-windows/bin;$penv{PATH}",
                "INCLUDE": "$env{ONEAPI_ROOT}/compiler/latest/include;$env{ONEAPI_ROOT}/tbb/latest/include;$penv{INCLUDE}",
                "LIB": "$env{ONEAPI_ROOT}/compiler/latest/lib;$env{ONEAPI_ROOT}/compiler/latest/lib/ocloc;$env{ONEAPI_ROOT}/tbb/latest/lib/intel64/vc14;$penv{LIB}",
                "CPATH": "$env{ONEAPI_ROOT}/compiler/latest/include"
            }
        }
    ]
}